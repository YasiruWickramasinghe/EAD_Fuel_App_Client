<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".stationManager.StatusUpdateActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Station Status Update"
                android:textAlignment="center"
                android:textColor="#101010"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txt1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Station No: "
                                android:textColor="#454545"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/txtStationNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="no"
                                android:textColor="#2196F3"
                                android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Station Name: "
                    android:textColor="#454545"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/txtStationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="no"
                    android:textColor="#2196F3"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Station Owner: "
                    android:textColor="#454545"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/txtOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="no"
                    android:textColor="#2196F3"
                    android:textSize="16sp" />
            </LinearLayout>

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Date"
                    android:textColor="#393939"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_edit_text"
                    android:inputType="none"
                    android:hint="Input the Start Time"
                    android:drawablePadding="8dp"
                    android:paddingTop="8dp"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:textColor="#373737"
                    android:textSize="16sp"
                    />
                <EditText
                    android:id="@+id/editEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_edit_text"
                    android:inputType="none"
                    android:hint="Input the End Time"
                    android:drawablePadding="8dp"
                    android:paddingTop="10dp"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:textColor="#373737"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinnerType"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/custom_edit_text"/>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                app:cornerRadius="30dp"
                android:text="Submit"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>